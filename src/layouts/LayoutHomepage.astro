---
import Layout from "@app/layouts/LayoutBase.astro";

import Cloud from "@app/components/Cloud.astro";
import Infobox from "@app/components/Infobox.astro";

import videoMp4 from "@app/assets/homepage-video.mp4";
import BetterFrame from "@app/components/BetterFrame.astro";
---

<Layout title="Startseite" showTagline={true}>
  <!-- Video -->
  <BetterFrame slot="header" aspect="video">
    <video muted autoplay loop>
      <source src={videoMp4} type="video/mp4" />
    </video>
  </BetterFrame>

  <!-- Cloud -->
  <div class="cloud-container">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-7 col-md-5 col-lg-3">
          <Cloud>Antonia Parr</Cloud>
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-10 col-md-6 col-lg-4">
        <Infobox>
          <slot />
        </Infobox>
      </div>
    </div>
  </div>
</Layout>

<style>
  .cloud-container {
    margin-top: -5.5rem;
  }
</style>
