---
import Layout from "@app/layouts/LayoutBase.astro";

import Cloud from "@app/components/Cloud.astro";
import Infobox from "@app/components/Infobox.astro";

import Carousel from "@app/components/Carousel.astro";

interface Props {
  gallery?: { image: ImageMetadata; description?: string }[];
}

const { gallery } = Astro.props;
---

<Layout title="Startseite" showTagline={true}>
  <!-- Gallery -->
  {
    gallery && (
      <Carousel
        images={gallery}
        alt="Vorgestelltes Projekt"
        hideButtons={true}
        slot="header"
      />
    )
  }

  <!-- Cloud -->
  <div class="cloud-container">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-7 col-md-5 col-lg-3">
          <Cloud>Antonia Parr</Cloud>
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-10 col-md-6 col-lg-4">
        <Infobox>
          <div class="p-3 pb-0">
            <slot />
          </div>
        </Infobox>
      </div>
    </div>
  </div>
</Layout>

<style>
  .cloud-container {
    margin-top: -5.5rem;
  }
</style>
