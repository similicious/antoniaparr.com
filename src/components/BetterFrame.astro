---
import frame from "@app/assets/frame.webp";
---

<section class="frame-container position-relative">
  <slot />

  <div class="frame" style={`border-image-source: url(${frame.src})`}></div>
</section>

<style>
  .frame {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;

    border-image-slice: 76 58 82 76;
    border-image-width: 20px 20px 20px 20px;
    border-image-outset: 0px;
    border-image-repeat: stretch stretch;
  }
</style>

<style is:global>
  .frame-container video,
  .frame-container img {
    width: 100%;
    height: auto;
  }
</style>
