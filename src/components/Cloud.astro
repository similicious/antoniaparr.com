---
interface Props {
  title: string;
}

import cloud from "@app/images/cloud.webp";
const { title } = Astro.props;
---

<div class="container cloud-container">
  <div class="row justify-content-center">
    <div class="col-7 col-md-5 col-lg-3">
      <section class="cloud" style={`background-image: url(${cloud.src})`}>
        <h1 class="h4 m-0 mt-2">{title}</h1>
      </section>
    </div>
  </div>
</div>

<style>
  .cloud-container {
    margin-top: -2.5rem;
  }

  .cloud {
    background-size: contain;
    background-repeat: no-repeat;
    aspect-ratio: 2.19;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
