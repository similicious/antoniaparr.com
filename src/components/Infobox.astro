---
import box from "@app/assets/box.webp";
---

<section class="infobox" style={`border-image-source: url(${box.src})`}>
  <div class="infobox-content">
    <slot />
  </div>
</section>

<style>
  .infobox {
    font-family: AvenirNextCondensed, sans-serif;
    font-weight: normal;
    text-align: center;
    color: white;
    padding: 1rem;
    border-image-slice: 87 70 108 75;
    border-image-width: 20px 20px 20px 20px;
    border-image-outset: 0px 0px 0px 0px;
    border-image-repeat: stretch stretch;
    border-style: solid;
  }

  .infobox-content {
    padding: 1rem;
    background-color: var(--color-light-blue);
  }
</style>
