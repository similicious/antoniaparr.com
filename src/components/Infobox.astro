---
import box from "@app/assets/box.webp";
---

<section class="infobox" style={`--infobox-border-image: url(${box.src})`}>
  <slot />
</section>

<style>
  .infobox {
    font-family: AvenirNextCondensed, sans-serif;
    font-weight: normal;
    text-align: center;
    color: white;
    padding: 1rem;

    border-image-source: var(--infobox-border-image);
    border-image-slice: 87 70 108 75 fill;
    border-image-width: 20px 20px 20px 20px;
    border-image-outset: 0px 0px 0px 0px;
    border-image-repeat: stretch stretch;
    border-style: solid;
  }
</style>
