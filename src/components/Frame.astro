---
import frame from "@app/assets/frame.webp";
import video from "@app/assets/video.webm";
---

<div class="video-container">
  <video autoplay>
    <source src={video} type="video/webm" />
    Your browser does not support the video tag.
  </video>
  <div class="video-frame" style={`background-image: url(${frame.src})`}></div>
</div>

<style>
  .video-container {
    position: relative;
    aspect-ratio: 1.42;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .video-container video {
    width: 98%;
    height: auto;
  }

  .video-frame {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: contain;
    background-repeat: no-repeat;
    pointer-events: none; /* This is important. It enables click-through */
  }
</style>
